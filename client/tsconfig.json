{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@services/*": ["src/lib/*"],
            "@components/*": ["src/components/*"],
            "@redux/*": ["src/stores/*"],
            "@hooks/*": ["src/hooks/*"],
            "@types/*": ["src/types/*"]
        },
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es2015",
        "module": "es2015",
        "strict": true,
        "jsx": "react"
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./node_modules",
        "../server",
        "./dist"
    ]
}
